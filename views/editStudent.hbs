<div class="container">

    <form method="POST" role="form">
        <legend>{{title}}</legend>

        {{#with student}}
        <div class="form-group">
            <input type="text" value="{{firstname}}" name="firstName" class="form-control" id="firstName" placeholder="First Name...">
            <input type="text" value="{{lastname}}" name="lastName" class="form-control" id="lastName" placeholder="Last Name...">
            <input type="email" value="{{email}}" name="email" class="form-control" id="email" placeholder="Email...">
            <input type="hidden" name="id" value="{{id}}">
        </div>
        {{/with}}
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>

    
    <button type="button" class="btn btn-link">Back to list</button>
    
</div>